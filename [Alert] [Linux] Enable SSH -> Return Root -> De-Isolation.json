{
  "version": "1",
  "dslSpecVersion": "1.1.0",
  "actionsSpecVersion": "1",
  "executionFlow": [
    {
      "parallel": {
        "input": "${.}",
        "branches": [
          {
            "name": "Branch 3",
            "steps": [
              {
                "action": {
                  "function": {
                    "type": "executeCustomScript",
                    "params": {
                      "commandLine": "/root/XDR/get_user_sessions.sh",
                      "commandLineParameters": "${\"--action enable_ssh_access --host \" + (alert.Observables | map(select(.Type==\"hostname\") | .Value | split(\"\\\\\") | .[-1]) | join(\",\"))}",
                      "stdIn": "",
                      "workingDirectory": ""
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  },
                  "output": {
                    "filter": "${ {enableSSH: .} }",
                    "action": "overwrite"
                  }
                }
              },
              {
                "action": {
                  "function": {
                    "type": "addCommentToAlert",
                    "params": {
                      "text": "${ .enableSSH.details.stdOut }"
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  }
                }
              }
            ]
          },
          {
            "name": "Branch 2",
            "steps": [
              {
                "action": {
                  "function": {
                    "type": "executeCustomScript",
                    "params": {
                      "commandLine": "/root/XDR/get_user_sessions.sh",
                      "commandLineParameters": "${\"--action restore_admins_access --host \" + (alert.Observables | map(select(.Type==\"hostname\") | .Value | split(\"\\\\\") | .[-1]) | join(\",\"))}",
                      "stdIn": "",
                      "workingDirectory": ""
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  },
                  "output": {
                    "filter": "${ {returnAdmins: .} }",
                    "action": "overwrite"
                  }
                }
              },
              {
                "action": {
                  "function": {
                    "type": "addCommentToAlert",
                    "params": {
                      "text": "${ .returnAdmins.details.stdOut }"
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  }
                }
              }
            ]
          },
          {
            "name": "Branch 1",
            "steps": [
              {
                "action": {
                  "function": {
                    "type": "executeCustomScript",
                    "params": {
                      "commandLine": "/root/XDR/get_user_sessions.sh",
                      "commandLineParameters": "${\"--action unisolate_host --host \" + (alert.Observables | map(select(.Type==\"hostname\") | .Value | split(\"\\\\\") | .[-1]) | join(\",\"))}",
                      "stdIn": "",
                      "workingDirectory": ""
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  },
                  "output": {
                    "filter": "${ {unisolateHost: .} }",
                    "action": "overwrite"
                  }
                }
              },
              {
                "action": {
                  "function": {
                    "type": "addCommentToAlert",
                    "params": {
                      "text": "${ .unisolateHost.details.stdOut }"
                    }
                  },
                  "onError": "stop",
                  "timeout": {
                    "scheduleToCloseTimeout": "24h"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
