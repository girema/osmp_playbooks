{
  "version": "1",
  "dslSpecVersion": "1.1.0",
  "actionsSpecVersion": "1",
  "executionFlow": [
    {
      "action": {
        "function": {
          "type": "addToLDAPGroup",
          "params": {
            "groupDN": "CN=Blocked users,CN=Users,DC=example,DC=local"
          },
          "assets": "${[ alert.Assets[] | select(.Type == \"user\") | .ID ]}"
        },
        "onError": "stop",
        "timeout": {
          "scheduleToCloseTimeout": "24h"
        }
      }
    }
  ]
}
