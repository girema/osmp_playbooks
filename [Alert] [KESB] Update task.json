{
  "dslSpecVersion": "1.1.0",
  "actionsSpecVersion": "1",
  "inputType": "alert",
  "executionFlow": [
    {
      "loop": {
        "input": "${ alert.Assets }",
        "steps": [
          {
            "action": {
              "function": {
                "type": "updateBases",
                "params": {
                  "wait": true
                },
                "assets": "${ . | map(.ID) }"
              },
              "output": {
                "filter": "${ . }",
                "action": "overwrite"
              }
            }
          }
        ]
      }
    }
  ],
  "name": "KESB_update_bases",
  "timeouts": [
    {
      "name": "default",
      "scheduleToCloseTimeout": "20m"
    }
  ],
  "playbookRunTimeout": "30m",
  "version": "1",
  "description": "KESB Update task"
}
